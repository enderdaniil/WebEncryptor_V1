
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EncodeDownload</title>
</head>
<body>

    @model IEnumerable<EncryptionWebApplication_V1.Models.FileModel>
    @{
        ViewData["Title"] = "Добавление файла";
    }

    <h3>Выберите файл для загрузки</h3>

    <form asp-action="DownloadEncryptedText" asp-controller="Encrypt" method="get" enctype="multipart/form-data" style="font-size: 200%; font-family: monospace; color: #cd66cc">

        <label style="fill: azure; position: relative; left: 100px; font-size: 150%">Как назвать файл?:</label><br />

        <input type="text" name="fileName" style="fill: azure; position: relative; left: 100px; font-size: 150%" /><br /><br />

        <p style="fill: azure; position: relative; left: 100px; font-size: 150%">Загрузка будет произведена в папку Downloads!!!</p>

        <input style="font-size: 200%; position: relative; left: 100px; color: darkgreen" type="submit" value="Загрузить" />

    </form>

    <form method="post" asp-action="CreateResponse" asp-controller="Encrypt" enctype="multipart/form-data" style="position: center">

        <input type="submit" value="Показать результат" style="font-size: 200%; position: relative; left: 100px; color: darkgreen" />

    </form>

    <a href="/Home/Encode">Вернуться к выбору файла и ключа</a><br /><br />

    <a href="/Home/Index">Вернуться на главную</a>

